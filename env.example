# Stellar Configuration
# Clave privada de la cuenta fondeada que se usará para crear otras cuentas
# Esta cuenta DEBE estar fondeada con XLM en la red correspondiente
STELLAR_FUNDER_SECRET_KEY=your_funder_secret_key_here

# Configuración de red (testnet o mainnet)
STELLAR_NETWORK=testnet
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org

# Para mainnet, usar:
# STELLAR_NETWORK=mainnet
# STELLAR_SERVER_URL=https://horizon.stellar.org

# MoneyGram Configuration
# Clave privada para autenticación SEP-10 con MoneyGram
MONEYGRAM_AUTH_SECRET_KEY=your_auth_secret_key_here

# Clave privada de la cuenta que enviará USDC a MoneyGram
# Esta cuenta DEBE tener USDC y XLM para fees
MONEYGRAM_FUNDS_SECRET_KEY=your_funds_secret_key_here

# Configuración de MoneyGram (testnet/production)
MONEYGRAM_HOST=extmganchor.moneygram.com
# Para producción: stellar.moneygram.com

# Development: Use SDF Test Anchor instead of MoneyGram
# Set to 'true' to use SDF Test Anchor for development
MONEYGRAM_USE_SDF_ANCHOR=false

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here 